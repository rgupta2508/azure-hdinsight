{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "clusterName",
        "type": "Microsoft.Common.TextBox",
        "label": "Cluster name",
        "toolTip": "The name of the new Sample Linux cluster.",
        "constraints": {
          "required": true,
          "regex": "^[a-z0-9]{3,24}$",
          "validationMessage": "Cluster names must be between 3 and 24 characters long, and can contain only numbers and lowercase letters."
        }
      },
      {
        "name": "clusterLoginUserName",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "Cluster Login User Name",
        "toolTip": "Cluster login username for the hdinsight.",
        "osPlatform": "Linux",
        "constraints": {
          "required": true
        }
      },
      {
        "name": "clusterLoginPassword",
        "type": "Microsoft.Common.PasswordBox",
        "label": {
          "password": "Cluster Login Password",
          "confirmPassword": "Confirm password"
        },
        "constraints": {
          "required": true,
          "regex": "^(?=.*[^a-zA-Z])(?=.*[a-z])(?=.*[A-Z])\\S{8,}$",
          "validationMessage": "The password must be at least 8 characters in length and must contain at least one digit, one non-alphanumeric character, one upper case letter and one lower case letter. Also, the password should not contain 3 consecutive letters from the username"
        },
        "osPlatform": "Windows"
      },
      {
        "name": "sshUserName",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "SSH User Name",
        "toolTip": "SSH credentials can be used to remotely access the cluster.",
        "osPlatform": "Linux",
        "constraints": {
          "required": true
        }
      },
      {
        "name": "sshPassword",
        "type": "Microsoft.Common.PasswordBox",
        "label": {
          "password": "SSH Login Password",
          "confirmPassword": "Confirm password"
        },
        "constraints": {
          "required": true,
          "regex": "^(?=.*[^a-zA-Z])(?=.*[a-z])(?=.*[A-Z])\\S{8,}$",
          "validationMessage": "The password must be at least 8 characters in length and must contain at least one digit, one non-alphanumeric character, one upper case letter and one lower case letter. Also, the password should not contain 3 consecutive letters from the username"
        },
        "osPlatform": "Windows"
      }
    ],
    "steps": [
      {
        "name": "SampleClusterConfig",
        "label": "Cluster settings",
        "subLabel": {
          "preValidation": "Configure the cluster",
          "postValidation": "Done"
        },
        "bladeTitle": "Cluster Size",
        "elements": [
          {
            "name": "clusterNodeCount",
            "type": "Microsoft.Common.DropDown",
            "label": "Number of Worker nodes",
            "defaultValue": "1",
            "toolTip": "The number of virtual machines (nodes) to provision for the cluster.",
            "constraints": {
              "allowedValues": [
                {
                  "label": "1",
                  "value": 1
                },
                {
                  "label": "2",
                  "value": 2
                },
                {
                  "label": "3",
                  "value": 3
                },
                {
                  "label": "4",
                  "value": 4
                },
                {
                  "label": "5",
                  "value": 5
                },
                {
                  "label": "6",
                  "value": 6
                }
              ]
            }
          },
          {
            "name": "workerNodeVmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Worker Nodes",
            "toolTip": "The size of virtual machine to provision for each cluster node.",
            "recommendedSizes": [
              "Standard_D3_v2",
              "Standard_D12_v2",
              "Standard_D13_v2"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_A3",
                "Standard_A4",
                "Standard_A6",
                "Standard_A7",
                "Standard_D3",
                "Standard_D4",
                "Standard_D12",
                "Standard_D13",
                "Standard_D14",
                "Standard_D3_v2",
                "Standard_D4_v2",
                "Standard_D5_v2",
                "Standard_D12_v2",
                "Standard_D13_v2",
                "Standard_D14_v2"
              ]
            },
            "osPlatform": "Linux",
            "count": "[steps('SampleClusterConfig').clusterNodeCount]"
          },
          {
            "name": "headNodeVmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Head Nodes",
            "toolTip": "The size of virtual machine to provision for each cluster node.",
            "recommendedSizes": [
              "Standard_D3_v2",
              "Standard_D12_v2",
              "Standard_D13_v2"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_A3",
                "Standard_A4",
                "Standard_A6",
                "Standard_A7",
                "Standard_D3",
                "Standard_D4",
                "Standard_D12",
                "Standard_D13",
                "Standard_D14",
                "Standard_D3_v2",
                "Standard_D4_v2",
                "Standard_D5_v2",
                "Standard_D12_v2",
                "Standard_D13_v2",
                "Standard_D14_v2"
              ]
            },
            "osPlatform": "Linux",
            "count": 2
          },
          {
            "name": "zookeeperVmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Zookeeper Node",
            "toolTip": "The size of virtual machine to provision for each cluster node.",
            "recommendedSizes": [
              "Standard_A3",
              "Standard_A4",
              "Standard_A5"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_A2",
                "Standard_A3",
                "Standard_A4",
                "Standard_A5",
                "Standard_A6",
                "Standard_A7",
                "Standard_D1",
                "Standard_D2",
                "Standard_D3",
                "Standard_D4",
                "Standard_D11",
                "Standard_D12",
                "Standard_D13",
                "Standard_D14",
                "Standard_D1_v2",
                "Standard_D2_v2",
                "Standard_D3_v2",
                "Standard_D4_v2",
                "Standard_D5_v2",
                "Standard_D11_v2",
                "Standard_D12_v2",
                "Standard_D13_v2",
                "Standard_D14_v2"
              ]
            },
            "osPlatform": "Linux",
            "count": 3
          },
          {
            "name": "edgenodeVmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Infoworks Node",
            "toolTip": "The size of virtual machine to provision for infoworks node.",
            "recommendedSizes": [
              "Standard_D3_v2",
              "Standard_D12_v2",
              "Standard_D13_v2"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_D3_v2",
                "Standard_D12_v2",
                "Standard_D13_v2"
              ]
            },
            "osPlatform": "Linux",
            "count": 1
          }
        ]
      }
    ],
    "outputs": {
      "clusterName": "[basics('clusterName')]",
      "clusterLoginUserName": "[basics('clusterLoginUserName')]",
      "sshUserName": "[basics('sshUserName')]",
      "clusterLoginPassword": "[basics('clusterLoginPassword')]",
      "sshPassword": "[basics('sshPassword')]",
      "clusterNodeCount": "[steps('SampleClusterConfig').clusterNodeCount]",
      "workerNodeVmSize": "[steps('SampleClusterConfig').workerNodeVmSize]",
      "headNodeVmSize": "[steps('SampleClusterConfig').headNodeVmSize]",
      "zookeeperVmSize": "[steps('SampleClusterConfig').zookeeperVmSize]",
      "edgenodeVmSize": "[steps('SampleClusterConfig').edgenodeVmSize]"
    }
  }
}
